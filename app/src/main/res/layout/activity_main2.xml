<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvStatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thống kê dự án theo thời gian bắt đầu"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/dateFilterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ ngày:" />

            <TextView
                android:id="@+id/tvFilterStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="12dp"
                android:hint="dd/MM/yyyy" />

            <TextView
                android:id="@+id/tvErrorStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng chọn ngày bắt đầu"
                android:textColor="#F44336"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đến ngày:" />

            <TextView
                android:id="@+id/tvFilterEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:padding="12dp"
                android:hint="dd/MM/yyyy" />

            <TextView
                android:id="@+id/tvErrorEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng chọn ngày kết thúc"
                android:textColor="#F44336"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbFilterCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã hoàn thành"
        app:layout_constraintTop_toBottomOf="@id/dateFilterLayout"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvErrorDateRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày bắt đầu phải nhỏ hơn ngày kết thúc"
        android:textColor="#F44336"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cbFilterCompleted" />

    <Button
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lọc dự án"
        app:layout_constraintTop_toBottomOf="@id/tvErrorDateRange"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnShowAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiện tất cả"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/btnFilter"
        app:layout_constraintStart_toEndOf="@id/btnFilter" />

    <Button
        android:id="@+id/btnAddNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm dự án"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/btnShowAll"
        app:layout_constraintStart_toEndOf="@id/btnShowAll" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProjects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnFilter"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
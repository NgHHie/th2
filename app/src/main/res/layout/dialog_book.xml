<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sách mới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên sách:"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/edtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên sách"/>

    <TextView
        android:id="@+id/txtErrTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập tên sách"
        android:textColor="#F44336"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tác giả:"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/edtAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên tác giả"/>

    <TextView
        android:id="@+id/txtErrAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập tên tác giả"
        android:textColor="#F44336"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày xuất bản:"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DD/MM/YYYY"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/txtErrDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn ngày xuất bản"
        android:textColor="#F44336"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thể loại:"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cbScience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khoa học"/>

        <CheckBox
            android:id="@+id/cbNovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiểu thuyết"/>

        <CheckBox
            android:id="@+id/cbChildren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thiếu nhi"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>